<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:touchscreenBlocksFocus="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment"></FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teams &amp; Coaches"
        android:id="@+id/teams"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/calendar"
        android:background="@color/ManualCrimson"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Athletics Calendar"
        android:id="@+id/calendar"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call the Athletics Office"
        android:id="@+id/call"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/calendar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/ManualCrimson"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />
</RelativeLayout>